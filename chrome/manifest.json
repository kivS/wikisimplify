{	
	"manifest_version": 2,

	"name": "WikiSimplify",
	"version": "1.0",
	"description": "A simple browser extension to activate the simplified version of an wikipedia article.",

	"permissions": [
      "activeTab",
      "declarativeContent"
    ],

	"background": {
	  "scripts": ["background.js"],
	  "persistent": false
	},

	"page_action": {
		"default_title": "WikiSimplify",
		"default_icon": {
		     "19": "icon-19.png",
		     "38": "icon-38.png"
		}
	}

}